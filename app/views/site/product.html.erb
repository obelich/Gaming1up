<div class="container mt-5 mb-5">
  <div class="card">
    <div class="row g-0">
      <div class="col-md-6 border-end">
        <div class="d-flex flex-column justify-content-center">
          <div class="main_image">
            <%= image_tag @product.product_front, id: 'main_product_image', style: 'height:100%;width:auto;'%>
          </div>
          <div class="thumbnail_images">
            <ul id="thumbnail">
              <li>
                <%= image_tag @product.product_front, onclick: 'changeImage(this)', width: '70'  %>
              </li>
              <li>
