            <h3><%= @product.name %></h3>
<!--            <span class="heart"><i class="far fa-address-book"></i></span>-->
          </div>
          <div class="mt-2 pr-3 content">
            <p>
              <%= @product.description %>
            </p>
          </div>
          <h3>$<%= @product.price %> MXN</h3>
